@model JobListingOutputViewModel
    <div class="col-sm-3">

               <div class="card" style="width: 18rem;">
                               
                    <div class="card-body">
                       <p class="mb-3">  @Model?.JobTitle</p> 
                       <p class="mb-3"> Salary: @Model?.SalaryPerMonth</p> 
                        <p class="mb-3"> Category: @Model?.JobCategory</p> 
                         <p class="mb-3"> Schedule: @Model?.Schedule</p> 
                       <a class="mb-3 btn btn-primary" asp-area=""  asp-controller="JobListing" asp-action="JobListingFullInformation" asp-route-id="@Model.Id" >Job full info</a>
                       <a class="mb-3 btn btn-primary" asp-area="" asp-controller="JobListing" asp-action="ApplyForJob" asp-route-id="@Model.Id">Apply for job</a>                       
                    </div>
               </div>
            </div>
