@using JobFinder.Core.Models.UserViewModels
@model IEnumerable<UserOutputViewModel>

@{
    ViewBag.Title = "Search for a user";
}


<h2 class="text-center">@ViewBag.Title</h2>
<hr />

<div asp-validation-summary="ModelOnly" class="text-danger text-center"></div>


<div class="row-10">
    <div class="align-items-baseline offset-5">
        <section>
        <form class="input-group-sm col-10 form-inline row gy-2 gx-3 align-items-center" method="get"  asp-controller="AdminUser" asp-action="SearchForUser">          
            <div>
                <div class="row-10 col-sm-5">
                    <div>
                     <div class="text-center mb-3">
                         <p class="text-center"> Keyword </p>
                    <input type="text" name="keyword" class="form-control" aria-required="true" />
                    <input class="btn btn-primary" type="submit" value="Search" />
                    
                </div>                     
                <div>              
           

        </form>
        </section>

    </div>
    @if(Model.Any())
    {

    <div class="col-lg-9 col-md-6">
        <h4 class="text-center">Users</h4>
          <table class="table table-hover table-dark">
        <thead>
          <tr>      
            <th scope="col">Number</th>       
            <th scope="col">Username</th>     
            <th scope="col">Email</th>         
            <th scope="col">Delete</th>
      
          </tr>
        </thead>
        <tbody>
          
                
           @foreach (var item in Model)
                  {
                   int counter = 1;
                   <tr>
                   <th >@counter</th>
                   <partial name="_UserSearchPartial" model="item"></partial>      
                   </tr>
                   counter++;
                  }
          
        </tbody>
      </table>
    </div>
    }
</div>
