@{
 ViewData["Title"] = "Home Page";
}
<div class="mt-4 p-5 bg-light text-center">
 <h2 class="display-4">Hello, Admin!</h2>
 <p class="lead mb-1 mt-3">
        This is your administrator area - you can <b>read</b>,
        <b>delete</b>  companies,job listings and users.
        
 </p>
 <hr class="my-4">
 <a asp-area="Administration" asp-controller="AdminCompany" asp-action="CompanySearch"
 class="btn btn-primary btn-lg">Search for companies</a>
 <span> | </span>
 <a asp-area="Administration" asp-controller="AdminJobListing" asp-action="SearchForJobs"
 class="btn btn-primary btn-lg">Search for jobs</a>
 <span> | </span>
 <a asp-area="Administration" asp-controller="AdminUser" asp-action="SearchForUser"
 class="btn btn-primary btn-lg">Search for users</a>
