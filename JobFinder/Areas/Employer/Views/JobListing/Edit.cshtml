@model JobListingInputViewModel
@{
    ViewData["Title"] = "Edit your ad";
}


<h1  class="text-center">@ViewData["Title"]</h1>
<div class="row">
    <div class="col-md-4 offset-md-4">
        <section>
            <form  method="post">
                <hr />
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="text-center mb-3">
                    <label asp-for="@Model.JobTitle" class="form-label"></label>
                    <input asp-for="@Model.JobTitle" class="form-control"  aria-required="true" />
                    <span asp-validation-for="@Model.JobTitle" class="text-danger"></span>
                </div>
                <div class="text-center mb-3">
                    <label asp-for="@Model.Description" class="form-label"></label>
                    <input asp-for="@Model.Description" type="text" class="form-control" aria-required="true"></input>
                    <span asp-validation-for="@Model.Description" class="text-danger"></span>
                </div>
                 <div class="text-center mb-3">
                    <label asp-for="@Model.SalaryPerMonth" class="form-label"></label>
                    <input asp-for="@Model.SalaryPerMonth" type="number" class="form-control" aria-required="true"></input>
                    <span asp-validation-for="@Model.SalaryPerMonth" class="text-danger"></span>
                </div>
                 <div class="text-center mb-3">
                    <label asp-for="@Model.VaccantionDays" class="form-label"></label>
                    <input asp-for="@Model.VaccantionDays" type="number" class="form-control" aria-required="true"></input>
                    <span asp-validation-for="@Model.VaccantionDays" class="text-danger"></span>
                </div>
                 <div class="text-center mb-3">
                    <label asp-for="@Model.Schedule" class="form-label"></label>
                    <select asp-for="@Model.Schedule" class="form-control" aria-required="true">
                    @foreach (var type in Model.Schedules)
                    {
                        <option value="@type.Id">@type.WorkingSchedule</option>
                    }
                </select>
                    <span asp-validation-for="@Model.Schedule" class="text-danger"></span>
                </div>
                   <div class="text-center mb-3">
                    <label asp-for="@Model.JobCategory" class="form-label"></label>
                    <select asp-for="@Model.JobCategory" class="form-control" aria-required="true">
                    @foreach (var type in Model.JobCategories)
                    {
                        <option value="@type.Id">@type.Name</option>
                    }
                     </select> 
                    <span asp-validation-for="@Model.JobCategory" class="text-danger"></span>
                    </div>

                <div class="text-center">
                    <button  type="submit" class="btn btn-success">Create</button>
                </div>
            </form>
        </section>
    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
